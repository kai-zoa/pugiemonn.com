<h1><%= @event.title %></h1>
<p>
  <%= @event.description %>
  <span><%= @event.created_at %></span>
</p>
<% if user_signed_in? %>
  <%= form_for(@attendance, remote: true) do |f| %>
    <p>
      <%= f.hidden_field :event_id %>
      <%= f.hidden_field :user_id %>
      <%= button_tag t".attendance", class: "btn btn-block btn-lg btn-primary", type: "submit" %>
    </p>
  <% end %>
<% else %>
  <%= link_to new_user_session_path, class: "btn btn-block btn-lg btn-primary" do %>
    <%= t".login_and_attend" %>
  <% end %>
<% end %>
<%#= debug @event.eventattendance %>
<h3><%= t".attendances" %>（<%= @event.eventattendances.count %>）</h3>
<ul class="event-attendance-lists">
  <% @event.eventattendances.each do |e| %>
    <li class="event-attendance-item">
      <%= e.user.id %>
    </li>
  <% end %>
</ul>
