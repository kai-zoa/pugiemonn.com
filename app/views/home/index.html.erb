<h1>pugiemonn.com</h1>
<div>
  <%= form_for @event do |f| %>
    <p>
      <%= f.label :description, t(".event") %><br>
      <%= f.text_area :description %>
    </p>
    <p>
      <%= f.submit %>
    </p>
  <% end %>
  <% @events.each_with_index do |event| %>
    <div class="event-post">
      <div class="event-post-date pull-right">
        <%= event.created_at %>
      </div>
      <div class="event-post-content">
        <%= event.description %>
      </div>
    </div>
  <% end %>
  <%= link_to t("communities.index.title"), communities_path %> / 
  <%= link_to t("events.index.title"), events_path %>
</div>
