<header>
  <h1></h1>
</header>
<article>
  <header>
    <h1><%= current_user.profile.name %><%= t".mypage" %></h1>
  </header>
  <section>
    <ul class="nav nav-tabs" id="myTab">
      <li class="active"><a href="#home" data-toggle="tab">Home</a></li>
      <li><a href="#profile" data-toggle="tab">Profile</a></li>
    </ul>
    <!-- Tab panes -->
    <div class="tab-content">
        <div class="tab-pane active" id="home">home</div>
        <div class="tab-pane" id="profile">profile</div>
    </div>
  </section>
</article>
<article id="mypage">
  <h1><%= t".title1" %></h1>
  <div>
    <% if @owner_events.count > 0 %>
      <ul>
        <% @owner_events.each_with_index do |event| %>
          <li class="event-list">
            <%= link_to event_path(event), class: "event-link" do %>
              <span class="event-post-date pull-right">
                <%= event.created_at %>
              </span>
              <span class="event-post-content">
                <%= event.description %>
              </span>
            <% end %>
          </li>
        <% end %>
      </ul>
    <% end %>
    <%= link_to t("communities.index.title"), communities_path %> /
    <%= link_to t("events.index.title"), events_path %>
  </div>
</article>
<%= content_for :javascript do %>
  <%= javascript_tag do %>
    $(function () {
    $('#myTab a:last').tab('show');
    })
  <% end %>
<% end %>