<h1><%= t"profiles.index.profile" %></h1>
  <% if user_signed_in? %>
    <%= current_user.profile.name %>
    <%= form_for current_user.profile, class: "form-horizontal" do |f| %>
      <%= f.hidden_field :user_id %>
      <div class="form-group">
        <label for="profile_name" class="col-sm-2 control-label"><%= t"profiles.index.name" %></label>
        <div class="col-sm-10">
          <%= f.text_field :name, class: "form-control", :"placeholder" => t("profiles.index.name") %>
        </div>
      </div>
    <%= button_tag t("helpers.submit.update"), class: "btn btn-lg btn-primary", type: "submit" %>
    <% end %>
  <% else %>
  <% end %>
<div>
  <%= link_to t(".create_event"), new_event_path %>
</div>
<div>
  <%= link_to t("home.index.title"), root_path %>
</div>