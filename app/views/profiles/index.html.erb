<h1><%= t".profile" %></h1>
  <% if user_signed_in? %>
    <div class="form-group">
      <label for="" class="col-sm-2 control-label"><%= t".name" %></label>
      <div class="col-sm-10">
        <%= current_user.profile.name %>
        <%= link_to t("helpers.submit.edit"), edit_profile_path(current_user), class: "btn btn-success" %>
      </div>
    </div>

    <div class="form-group">
      <label for="" class="col-sm-2 control-label"><%= t"devise.index.mail" %></label>
      <div class="col-sm-10">
        <%= current_user.email %>
        <%= link_to t("helpers.submit.edit"), edit_user_registration_path(current_user), class: "btn btn-success" %>
      </div>
    </div>
  <% else %>
  <% end %>
<div>
  <%= link_to t(".create_event"), new_event_path %>
</div>
<div>
  <%= link_to t("home.index.title"), root_path %>
</div>
